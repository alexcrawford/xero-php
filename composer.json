{
    "name": "kickdigital/xero-php",
    "type": "library",
    "description": "A client implementation of the Xero API, with a cleaner OAuth interface and ORM-like abstraction.",
    "homepage": "https://github.com/calcinai/xero-php",
    "license": "MIT",

    "require": {
        "php": ">=7.1.0",
        "ext-curl": "*",
        "ext-openssl": "*"
    },

    "require-dev": {
        "phpunit/phpunit": "~4.7"
    },

    "repositories": [
        {"type": "composer", "url": "https://packages.kickdigital.co.uk/repo/private/"}
    ],

    "autoload": {
        "psr-4": {
            "XeroPHP\\": "src/XeroPHP/"
        }
    }

}
